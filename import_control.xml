<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.1//EN"
        "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">
<import-control pkg="nl.minjus.nfi.dt.jhashtools">
    <allow pkg="java.io"/>
    <allow pkg="java.util"/>
    <allow pkg="java.nio"/>
    <allow pkg="java.net"/>
    <allow pkg="java.security"/>
    <allow pkg="nl.minjus.nfi.dt.jhashtools.utils"/>
    <allow pkg="nl.minjus.nfi.dt.jhashtools.hashers"/>
    <allow pkg="nl.minjus.nfi.dt.jhashtools.persistence"/>
    <allow pkg="nl.minjus.nfi.dt.jhashtools.exceptions"/>    
    <allow pkg="org.codehaus.jackson.annotate"/>
    <allow pkg="org.apache.commons.cli"/>

    <subpackage name="exceptions">
        <allow pkg="java.io"/>
    </subpackage>

    <subpackage name="hashers">
        <allow pkg="java.util.concurrent"/>
        <allow pkg="nl.minjus.nfi.dt.jhashtools"/>
    </subpackage>

    <subpackage name="persistence">
        <allow pkg="org.codehaus.jackson"/>
        <allow pkg="org.codehaus.jackson.map"/>
        <allow pkg="nl.minjus.nfi.dt.jhashtools"/>
        <allow pkg="org.antlr.runtime"/>
    </subpackage>
</import-control>